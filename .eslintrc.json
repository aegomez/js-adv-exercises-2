{
  "env": {
    "commonjs": true,
    "es2021": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-plusplus": "off",
    "prefer-const": [
      "error",
      {
        "destructuring": "all"
      }
    ]
  }
}
